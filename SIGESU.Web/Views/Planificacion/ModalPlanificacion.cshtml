<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Planificacion Producto</h4>
            </div>
            <div class="modal-body">
                <input id="IdPlanificacion" type="text" style="display: none;" />
                <input id="IdPlanificacionOrigen" type="text" style="display: none;" />
                <div class="form-group">
                    <div class="col-sm-6">
                        <button id="btnBuscarHistorico" type="button" class="btn btn-theme" data-toggle="modal" data-target="#myModalHistorico">Buscar Histórico</button>
                    </div>
                    <div class="col-sm-6">
                        <input id="NumeroPlanificacion" type="text" class="form-control" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <label class="col-sm-2 col-sm-2 control-label">Producto</label>
                        @Html.DropDownList("Productos", new SelectList(ViewBag.listaProductos, "IdProducto", "NombreProducto"), new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-6"><label>Fabricante</label><input id="Fabricante" type="text" class="form-control" readonly></div>
                    <div class="col-sm-6"><label>Tipo</label><input id="Tipo" type="text" class="form-control" readonly></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-6"><label>Categoría</label><input id="DescripcionFamilia" type="text" class="form-control" readonly></div>
                    <div class="col-sm-6"><label>Certificación</label><input id="NombreCertificado" type="text" class="form-control" readonly></div>
                </div>
                <div class="form-group">
                    <label class="col-sm-12" for="TextArea">Especificaciones</label>
                    <div class="col-sm-12"><textarea class="form-control" id="NombreComposicion" readonly></textarea></div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Fecha de Ejecución</label>
                    <div class="col-sm-10 datepicker">
                        <input id="FechaInicio" type="text" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-6"><label>Laboratorio</label>@Html.DropDownList("Laboratorios", new SelectList(ViewBag.listaLaboratorios, "IdLaboratorio", "NombreLaboratorio"), new { @class = "form-control" })</div>
                    <div class="col-sm-6"><label>Especialista</label>@Html.DropDownList("Especialistas", new SelectList(ViewBag.listaEspecialistas, "IdEspecialista", "NombreEspecialista"), new { @class = "form-control" })</div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Sucursal - Almacén</label>
                    <div class="col-sm-10">
                        @Html.DropDownList("SucursalAlmacenes", new SelectList(ViewBag.listaSucursalAlmacenes, "IdSucursalAlmacen", "Nombre"), new { @class = "form-control", multiple = "multiple" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar (Esc)</button>
                <button id="btnGrabar" type="button" class="btn btn-primary">Grabar</button>
            </div>
        </div>
    </div>
</div>